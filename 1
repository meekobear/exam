//Exam 1

#include <iostream>
using namespace std;

int main()
{
	// Finding circumference of a circle
	int radius, diameter, circumference, area;
	cout << "==============================================================" << endl << endl
		<< "       * * *" << endl
		<< "    *         *" << endl
		<< "  *             *     formula:" << endl
		<< " *               *    _____________________________" << endl
		<< " *     Circle    *       PI = 3.14159" << endl
		<< " *               *       Diameter = 2 * radius" << endl
		<< "  *             *        Circumference = PI * Diameter" << endl
		<< "    *         *          Area = PI * pow(radius,2)" << endl
		<< "       * * *" << endl << endl;

	cout << "Enter the radius of a circle:";
	cin >> radius;

	diameter = radius * 2.0;
	circumference = 3.14159 * diameter;
	area = 3.14159 * (radius * radius);

	cout << "Diameter of the circle = " << diameter << endl;
	cout << "Circumference of the circle = " << circumference << endl;
	cout << "Area of the circle = " << area << endl;

	//Finding P and A of Rectangle
	int length, width, perimeter, area;
	cout << "-------------------------------------------------------------------------" << endl << endl
		<< " * * * * * * * * *" << endl
		<< " *               *" << endl
		<< " *               *           formula:" << endl
		<< " *               *          ---------------------------------------" << endl
		<< " *   Rectangle   *              Perimeter = 2 * (length + width)" << endl
		<< " *               *              Area = length * width" << endl
		<< " *               *" << endl
		<< " *               *" << endl
		<< " * * * * * * * * *" << endl << endl

	cout << "Enter the length of a rectangle:";
	cin >> length;
	cout << "Enter the width of a rectangle:";
	cin >> width;

	perimeter = 2 * (length + width);
	area = length * width;

	cout >> "Perimeter of the rectangle = " << perimeter << endl;
	cout >> "Area of the rectangle = " << area << endl;

	//Finding P and A of triangle
	int side, perimeter, area;
	cout << "-------------------------------------------------------------------------" << endl << endl
		<< "                *" << endl
		<< "              *   *" << endl
		<< "            *       *" << endl
		<< "          *           *" << endl
		<< "        *  Equilateral  *" << endl
		<< "      *      Triangle     *" << endl
		<< "    *                       *" << endl
		<< "  * * * * * * * * * * * * * * *" << endl << endl

	cout << "Enter a side of the equilateral triangle:";
	cin >> side;

	perimeter = 3 * side;
	area = (sqrt(3.0) / 4) * (side * side)"

	cout >> "Perimeter of the equilateral triangle = " << perimeter << endl;
	cout >> "Area of the equilateral triangle = " << area << endl;


	return 0;
}
